extend layout

block body
  .container
    .row
      h1 Hangman Game
    .row
      .input-group
        .input-group-btn
          button(id="btn-start-game", class="btn btn-primary") Start new game
        input(id="new-game-word", type="password", autocomplete="off", placeholder="Type any word here or leave blank for random.", class="form-control")
    .row(id="error", class="hidden")
      div.alert.alert-danger
        span.lead
    .row(id="puzzle", class="hidden")
      span
    .row(id="remaining", class="hidden")
      span.lead
    .row(id="letters", class="hidden")
      each val, i in '1234567890abcdefghijklmnopqrstuvwxyz'.split('')
        if (i % 10 === 0)
          .row
        button(id="letter-" + val, data-letter=val, class="btn btn-default btn-info")= val.toUpperCase()
    .row(id="won", class="hidden")
      div.alert.alert-success
        span.lead Congratulations! You Won! The word is:
        p.word
    .row(id="failure", class="hidden")
      div.alert.alert-danger
        span.lead Ohhh! You lost... But you can always try again. The word is:
        p.word
